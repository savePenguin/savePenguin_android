<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="401dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view9"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/gobackBtn_changPw"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_baseline_arrow_back_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_beforepw"
                android:layout_width="118dp"
                android:layout_height="38dp"
                android:text="이전 비밀번호 :"
                android:textAlignment="viewStart" />

            <EditText
                android:id="@+id/editText_beforepw"
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:id="@+id/view13"
            android:layout_width="360dp"
            android:layout_height="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_newpw"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="새 비밀번호 :"
                android:textAlignment="viewStart" />

            <EditText
                android:id="@+id/editText_newpw"
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:id="@+id/view14"
            android:layout_width="378dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_newpw2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="새 비밀번호 확인 :"
                android:textAlignment="viewStart" />

            <EditText
                android:id="@+id/editText_newpw2"
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <View
            android:id="@+id/view12"
            android:layout_width="wrap_content"
            android:layout_height="129dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view10"
                android:layout_width="158dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button_changepw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경" />

            <View
                android:id="@+id/view11"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/view15"
            android:layout_width="wrap_content"
            android:layout_height="129dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>